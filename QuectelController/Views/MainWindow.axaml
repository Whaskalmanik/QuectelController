<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:QuectelController.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="QuectelController.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        MinHeight="700" MinWidth="750"
        Title="QuectelController">

  <Design.DataContext>
      <vm:MainWindowViewModel/>
  </Design.DataContext>
 
  <TabControl>
    <TabItem Header="Communication" VerticalContentAlignment="Center">
      <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" Margin="4">
          <Label Margin="5" Grid.Row="0" Grid.Column="0">Serial Port</Label>
          <ComboBox Width="100" Margin="5" Grid.Row="0" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding SerialPort}" Items="{Binding SerialPorts}"></ComboBox>
          <Label Margin="5" Grid.Row="1" Grid.Column="0">Baudrate</Label>
          <ComboBox Width="100" Margin="5" Grid.Row="1" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding Baudrate}" Items="{Binding Baudrates}"></ComboBox>
          <Label Margin="5" Grid.Row="2" Grid.Column="0">Data bits</Label>
          <ComboBox Width="100" Margin="5" Grid.Row="2" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding DataBits}" Items="{Binding DataBitsList}" ></ComboBox>
          <Label Margin="5" Grid.Row="3" Grid.Column="0">Stop bits</Label>
          <ComboBox Width="100" Margin="5" Grid.Row="3" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding StopBits}" Items="{Binding StopBitsList}"></ComboBox>
          <Label Margin="5" Grid.Row="4" Grid.Column="0">Parity</Label>
          <ComboBox Width="100" Margin="5" Grid.Row="4" Grid.Column="1" SelectedIndex="0" SelectedItem="{Binding Parity}" Items="{Binding Parities}"></ComboBox>
          <Button Command="{Binding DisconnectCommand}" Grid.Row="5" Grid.Column="0" Content="Disconnect"/>
          <Button Command="{Binding ConnectCommand}" Grid.Row="5" Grid.Column="1" Width="100" Content="Connect"/>
          <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="6" BorderBrush="Black" BorderThickness="1">
            <TreeView>
            </TreeView>
          </Border>
        </Grid>
        <Border Height="25" BorderBrush="White" BorderThickness="1" DockPanel.Dock="Bottom">
          <TextBlock FontSize="12" Foreground="Black">Â©Vladislav Ohera</TextBlock>
        </Border>
        <Border Height="35" BorderBrush="White" BorderThickness="1" DockPanel.Dock="Top">
          <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
            <Button Command="{Binding SendCommand}" Width="100" Grid.Row="0" Grid.Column="1" Content="Send"/>
            <TextBox Grid.Row="0" Grid.Column="0" Watermark="Command to be send" Text="{Binding ToSendValue}"></TextBox>
          </Grid>
        </Border>
        <Border BorderBrush="Black" BorderThickness="1">
          <TextBlock Padding ="5" FontSize="12" Foreground="Black">test</TextBlock>
        </Border>
      </DockPanel>
    </TabItem>
    
    <TabItem Header="Setup" VerticalContentAlignment="Center">
    </TabItem>
    
    <TabItem Header="Update" VerticalContentAlignment="Center">
    </TabItem>
</TabControl>

</Window>
