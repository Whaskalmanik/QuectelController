<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="QuectelController.Views.WriteWindow"
        MinHeight="400" MinWidth="400"
        Title="WriteWindow">


  <DockPanel LastChildFill="True">
    <Grid Margin="4.5,0,4,5" DockPanel.Dock="Bottom" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto,Auto">
      <TextBlock Name="TextBoxDescribtion" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="1"  FontSize="12" Foreground="Black" Text="ahoj"></TextBlock>
      <Separator/>
      <Button Grid.Row="3" Background="Green" Foreground="White" Grid.Column="2" Content="Submit" Width="80" HorizontalContentAlignment="Center"/>
      <Button Grid.Row="3" Background="Red" Foreground="White" Grid.Column="1" Content="Close" Width="80" HorizontalContentAlignment="Center"/>
    </Grid>
    <Separator DockPanel.Dock="Bottom"/>
    <ScrollViewer Margin="4.5,0,4,5">
      <Grid Name="GridLayout" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" >
      </Grid>
    </ScrollViewer>
  </DockPanel>
</Window>
